import sys
from notebook import NoteBook, Note

class Menu:
    '''Displays a menu and responds to choices when run'''
    def __init__(self):
        self.notebook = NoteBook()
        self.choices = {"1":self.show_notes,
                        "2":self.search_notes,
                        "3":self.add_note,
                        "4":self.modify_note,
                        "5":self.quit
                        }

